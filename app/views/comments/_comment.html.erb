<li id="comment-<%= comment.id %>">
   <%= link_to gravatar_for(comment.user), comment.user %>
   <span class="user"><%= link_to comment.user.name, @micropost.user %></span>
   <span class="content"><%= comment.content %></span>

   <span class="timestamp">
     Replied <%= time_ago_in_words comment.created_at %> ago
   </span>
   <% if logged_in? %>
     <% if current_user? comment.user or current_user? @micropost.user %>
       <%= link_to "Delete", [comment.micropost, comment], method: :delete,
 data: {confirm: "You sure?"} %>
     <% end %>
   <% end %>
 </li>
